{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "version": "independent",
  "command": {
    "version": {
      "preid": "beta",
      "conventionalPrerelease": true,
      "allowBranch": ["beta", "stable"],
      "gitTagVersion": true,
      "changelog": true,
      "push": false,
      "yes": true,
      "conventionalCommits": true,
      "ignoreChanges": ["*.md"],
      "message": "chore(release): publish"
    },
    "publish": {
      "distTag": "beta"
    }
  }
}
